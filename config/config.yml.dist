projects:
    project_name_1:
        repository: "git@bitbucket.org:project/project.git"
        jenkins: false
        workspace: "/var/lib/jenkins/workspace/project"
        origin_name: "origin"
        branch: "master"
        save_releases_in_dir: "/folder/to/save/to"
    project_name_2:
        repository: "git@github.com:project/project.git"
        workspace: "/var/lib/jenkins/workspace/project"
        origin_name: "origin"
        branch: "master"
        save_releases_in_dir: "/folder/to/save/to"

ignore:
    project_name:
        files:
            - "name of a folder"
            - "name of a file"

deploy_to:
    project_name_1:
        server_environment:
            username: vagrant
            server: "127.0.0.1"
            port: "22"
    project_name_2:
        prod:
            username: apache
            server: "example.com"
            port: "22"

pre_deploy:
    project_name:
       runner: "/usr/bin/php"
       script: "/path/to/some/script.php"

post_deploy:
    project_name:
        runner: "/usr/bin/php"
        script: "/path/to/script.php"

clean_up:
    project_name:
        commands:
            - "rm -rf /path/to/folder"
            - "touch done.txt"
